<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="BNO_dims" value="0.1 0.1 0.1"/>
    <xacro:property name="BNO_xyz" value="0.587 0.68 .232"/>
    <xacro:property name="BNO_rot" value="0.0 0.0 0.0"/>

    <!-- BNO Link-->
    <link name="BNO" type="fixed">
        <visual>
            <geometry>
                <box size="${BNO_dims}"/>
            </geometry>
            <material name="Cyan">
                <color rgba="0 1.0 1.0 1.0"/>
            </material>
        </visual>
    </link>
    <joint name="BNO_joint" type="fixed">
        <parent link="zero_point"/>
        <child link="BNO"/>
        <origin xyz="${BNO_xyz}" rpy="${BNO_rot}"/>
    </joint>
    
</robot>
