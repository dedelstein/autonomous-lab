<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="RS_dims" value="0.1 0.1 0.1"/>
    <xacro:property name="RS_xyz" value=".780 .68 .615"/>
    <xacro:property name="RS_rot" value="0.0 0.0 0.0"/>

    <!-- RS Link-->
    <link name="RS" type="fixed">
        <visual>
            <geometry>
                <box size="${RS_dims}"/>
            </geometry>
            <material name="Cyan">
                <color rgba="0 1.0 1.0 1.0"/>
            </material>
        </visual>
    </link>
    <joint name="RS_joint" type="fixed">
        <parent link="zero_point"/>
        <child link="RS"/>
        <origin xyz="${RS_xyz}" rpy="${RS_rot}"/>
    </joint>
    
    <!-- RS Camera Link-->
    <link name="camera_link" type="fixed">
    </link>
    <joint name="camera_joint" type="fixed">
        <parent link="RS"/>
        <child link="camera_link"/>
    </joint>
    
</robot>
